{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
    {% set row_class = row_class|default('block mt-2') %}
    {{ parent() }}
{% endblock %}

{% block form_label %}
    {% set label_class = label_class|default('text-text') %}
    {{ parent() }}
{% endblock  %}

{% block form_widget %}
    {% set widget_class = widget_class|default('rounded border w-full py-1 px-2') %}
    {{ parent() }}
{% endblock  %}

{{ form_row(form.save, {
    row_class: 'border mt-2 px-3 ...',
    label_class: 'border font-semibold text-gray-600 ...',
    error_item_class: 'border text-red-700 ...',
    widget_class: 'border border-gray-200 bg-gray-50 ...',
    widget_disabled_class: 'border border-dashed text-gray-200 ...',
    widget_errors_class: 'border border-double border-red-500 bg-red-50 ...',
}) }}