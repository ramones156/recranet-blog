{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
    <div class="">
        <div class="flex">
            <h1 class="text-4xl text-text">
                My Blog
            </h1>
            <a class="my-auto mx-4 rounded py-2 px-4 bg-button text-button-text" href="{{ path('blogCreate') }}">Create
                Post</a>
        </div>
        <div class="flex">
            <ul class="mx-auto">
                {% for blogPost in blog_posts %}
                    <li class="m-2 p-2">
                        {% include 'blog/blog_post.html.twig'  %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>

{% endblock %}
