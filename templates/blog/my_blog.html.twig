{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
    <div class="mx-auto max-w-4xl">
        <div class="flex my-2 justify-start mx-auto">
            <h1 class="text-4xl text-text content-start">
                My Blog
            </h1>
            <a class="my-auto mx-4 rounded py-2 px-4 bg-button text-button-text" href="{{ path('blogCreate') }}">Create
                Post</a>
        </div>
        <div class="flex flex-wrap justify-center">
                {% for blogPost in blog_posts %}
                        {{ component('blog_post', { blogPost: blogPost, enableEdit:true, enableDelete: true }) }}
                {% endfor %}
        </div>
    </div>

{% endblock %}
